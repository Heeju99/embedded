#include "TimeWatch.h"

void TimeWatch_Init()
{

}

void TimeWatch_Excute()
{

}


void TimeWatch_IncTimeCallBack() //1ms마다 Callback
{
	if(Model_Get_StopWatchState() != S_STOPWATCH_RUN){
		return;
	}

	if(stopWatchData.msec != 1000-1){
		stopWatchData.msec++;
		return;
	}
	stopWatchData.msec = 0;

	if(stopWatchData.sec != 60-1){
		stopWatchData.sec++;
		return;
	}
	stopWatchData.sec = 0;

	if(stopWatchData.min != 60-1){
		stopWatchData.min++;
		return;
	}
	stopWatchData.min = 0;


	if(stopWatchData.hour != 24-1){
		stopWatchData.hour++;
		return;
	}
	stopWatchData.hour = 0;
}
