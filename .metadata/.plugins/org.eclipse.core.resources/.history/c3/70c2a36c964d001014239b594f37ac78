#include "TIM.h"

void TIM_Init(){

}

void TIM_Start(TIM_TypeDef TIMx) //enable
{
	TIMx->CR1 |= (1 << 0);
}

void TIM_Stop(TIM_TypeDef TIMx) //disable
{
	TIMx->CR1 &= ~(1 << 0);
}

void TIM_InterEnable(TIM_TypeDef TIMx)
{

}

void TIM_InterDisable(TIM_TypeDef TIMx)
{

}

uint32_t TIM_ReadCNT(TIM_TypeDef TIMx)
{
	return TIMx->CNT;
}

void TIM_WriteCNT(TIM_TypeDef TIMx, uint32_t cnt)
{
	return TIMx->CNT = cnt;
}

uint32_t TIM_ReadPSC(TIM_TypeDef TIMx)
{
	return TIMx->PSC;
}

void TIM_WritePSC(TIM_TypeDef TIMx, uint32_t cnt)
{
	return TIMx->PSC = cnt;
}

uint32_t TIM_ReadARR(TIM_TypeDef TIMx)
{
	return TIMx->ARR;
}

void TIM_WriteARR(TIM_TypeDef TIMx, uint32_t cnt)
{
	return TIMx->ARR = cnt;
}

