#include "Ultra.h"

#define UL_TRIGGER 5
#define UL_ECHO  7

#define LCD_E	2


static uint8_t UltraData = 0;
uint32_t count = 0;
uint16_t distance = 0;

void Ultra_Init()
{

}


void Ultra_Trigger_Input()
{
	Ultra_High();
	Delay_us(10);
	Ultra_Low();

}

void Ultra_High()
{
	HAL_GPIO_WritePin(GPIOx, UL_TRIGGER, SET);
}

void Ultra_Low()
{
	HAL_GPIO_WritePin(GPIOx, UL_TRIGGER, RESET);
}


void Ultra_Echo()
{
	HAL_GPIO_ReadPin(GPIOx, UL_ECHO)
}

uint16_t Ultra_Calculate(uint32_t count)
{
	if(!(count == 0)){
		distance = count / 58;
		return distance;
	}
}
