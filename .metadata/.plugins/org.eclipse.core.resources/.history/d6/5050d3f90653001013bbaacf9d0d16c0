#include "Security.h"

extern inputData_TypeDef controlData;

static safe_t safetype = {SECURITY, 0, 0, 0};

void Security_RunCallBack()
{

}

void Security_Exexcute()
{
	if (controlData.id == SECURITY_RUN) {
		controlData.id = NO_SEC_CON;
	}
		LCD_writeStringXY(0,0, "");
		Presenter_OutData(safetype);
}

void StopWatch_IncTimeCallBack()
{
	if (stopWatchState == RUN) {
		StopWatch_IncTime();
	}
}



